{
    "version": "2.0.0",
    "command": "cmd",
    "type": "shell",
    "args": ["/C"],
    "tasks": [
        {
            "group": "build",
            "label": "make",
            "command": "${env:GDK}\\bin\\make",
            "args": [
                "-f",
                "${env:GDK}\\makefile.gen"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "group": "build",
            "label": "makeandopen",
            "command": "${env:GDK}\\bin\\make",
            "args": [
                "-f",
                "${env:GDK}\\makefile.gen"
            ],
            "dependsOn": "make", // Ensure 'make' task is completed before executing 'makeandopen'
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
            "windows": {
                "command": "start",
                "args": [
                    //"blastem",
                    "E:\\MermaidGunnerGenesis\\out\\rom.bin"
                ],
                "options": {
                    "cwd": "E:\\MermaidGunnerGenesis\\out"
                }
            }
        },
        {
            "label": "clean",
            "command": "${env:GDK}\\bin\\make",
            "args": [
                "clean",
                "-f",
                "${env:GDK}\\makefile.gen"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}

